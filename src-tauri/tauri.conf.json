{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARCS BLE NetCfg",
  "version": "0.1.0",
  "identifier": "com.arcs.ble.netcfg",
  "bundle": {
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller",
        "path": "webview2/MicrosoftEdgeWebView2RuntimeInstallerX64.exe"
      }
    }
  },
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "title": "ARCS BLE NetCfg",
        "width": 920,
        "height": 720,
        "resizable": true
      }
    ]
  }
}
